<div class="grid-x grid-padding-x grid-padding-y grid-margin-y medium-up-2 large-up-3 align-center">
    {% for feature in features %}
      <section class="cell text-center" data-aos="fade-up">
        <h2>{{ feature.title }}</h2>
        <p class="padding-horizontal-3 margin-bottom-0">{{ feature.description|raw }}</p>
      </section>
    {% endfor %}
</div>